@model Department

@{
    ViewData["Title"] = "Home Page";
}

<h1>Department Details</h1>

<div class="card">  
    <div class="card-header">  
        <h4>Department Details</h4>  
    </div>  
    <div class="card-body">  
        <div asp-validation-summary="All"></div>  
        <form asp-action="Create">  
            <div class="form-group">  
                <label asp-for="DepartName" class="label-control">

                </label>
                <input asp-for="DepartName" class="form-control"/>
                <span asp-validation-for="DepartName" class="text-danger"></span> 
                </div>
                <div class="form-group">  
                <label asp-for="Level" class="label-control"></label> 
                <select asp-for="Level" class="custom-select"> 
                 <option value="">Choose Level</option>  
                    <option value="2NDYear">2</option>  
                    <option value="3rdYear">3</option> 
                </select>  
                <span asp-validation-for="Level" class="text-danger"></span>  
                </div>
                <div class="form-group">  
                <label asp-for="DepartCode" class="label-control">

                </label>
                <input asp-for="DepartCode" class="form-control"/>
                <span asp-validation-for="DepartCode" class="text-danger"></span> 
                </div>
                <div>  
                <button type="submit" class="btn btn-sm btn-primary rounded-0">Submit</button>  
            </div>  
        </form>  
    </div>  
</div>  

